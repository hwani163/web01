<?xml version="1.0"?>

<!-- step01~ step04 까지 사용한다. -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1" >

  <!-- 서블릿을 웹 애플리케이션에 등록하기
    1) 서블릿 정보를 등록
    2) 서블릿에 URL을 연결
   -->
  <!-- 서블릿 정보를 등록한다. -->
  <servlet>
    <servlet-name>ok hello</servlet-name>
    <servlet-class>net.bitacademy.java67.Hello</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>step01.Test01</servlet-name>
    <servlet-class>net.bitacademy.java67.step01.Test01</servlet-class>
  </servlet>
  
  <!-- 서블릿에 URL을 연결한다. -->
  <servlet-mapping>
    <servlet-name>ok hello</servlet-name>
    <url-pattern>/test00/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>step01.Test01</servlet-name>
    <url-pattern>/step01/Test01</url-pattern>
  </servlet-mapping>
</web-app>













